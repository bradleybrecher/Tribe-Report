<div class="container">
  <h2>FIlTER BY NAME</h2>
  <form class="form-horizontal" method="GET" action="/feed">
    <div class="form-group">
      <label class="control-label col-sm-2" for="email">Name:</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="name"  name="name">
      </div>
    </div>
    
    <div class="form-group">        
      <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" class="btn btn-default" onlick="isValidURI()">Filter</button>
      </div>
    </div>
    </div>
  </form>
</div>


 <div class="container">
  <div class="page-header">
    <h1 id="timeline">Feed</h1>
  </div>
   {{#each articles as |a|}}
  <ul class="timeline">
    <li>
      <div class="timeline-badge"><i class="glyphicon glyphicon-check"></i></div>
      <div class="timeline-panel">
        <div class="timeline-heading">
          <h4 class="timeline-title"><a href="{{a.link}}"> {{a.title}}</a></h4>
          <h6 class="timeline-title"> {{a.name}}</h6>
          <p><small class="text-muted"><i class="glyphicon glyphicon-time"></i> 11 hours ago via Twitter</small></p>. <!-- way to get when it was posted -->
        </div>
        <div class="timeline-body">
          <p1>{{a.name}}:{{a.comment}}</p1>
           {{#each a.comments as |c|}}
          <p>{{c.name}}:{{c.comment}}</p>
          {{/each}}
        </div>



        <form class="form-inline" method="POST" action="/feed">
          <label class="sr-only" for="inlineFormInput">Name</label>
          <input type="text"  name="name" class="form-control mb-2 mr-sm-2 mb-sm-0" id="inlineFormInput" placeholder="Name">

          <label class="sr-only" for="inlineFormInputGroup">Comment</label>
          <div class="input-group mb-2 mr-sm-2 mb-sm-0">
            <input type="text" name ="comment" class="form-control" id="inlineFormInputGroup" placeholder="Comment">
          </div>
          <button type="submit" name="{{a._id}}"class="btn btn-primary">Submit Your Take</button>
        </form>

        <!-- add a way to have a comment form, with a name and a comment to add on -->
      </div>
    </li>
  </ul>
  {{/each}}
</div>