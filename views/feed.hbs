<div class="container container-small">
   <form class="form-horizontal" id ="filterform" method="GET" action="/feed">
      <div class="form-group">
         <h2 id="filter">FIlTER BY NAME</h2>
         <div class="col-sm-12">
            <input placeholder="Name" type="text" class="form-control" id="name"  name="name">
         </div>
      </div>
      <div class="form-group">
         <div class="col-sm-offset-0 col-sm-12">
            {{#if message}}
            <br> 
            <p style=" color: red;">{{message}} </p>
            </br>
            {{/if}}
            <button type="submit" class="btn btn-default" id="filterbtn" onlick="isValidURI()">Filter</button>
         </div>
      </div>
   </form>
</div>
<div class="container">
   <div class="page-header">
      <h1 id="timeline">Feed</h1>
   </div>
   {{#each articles as |a|}}
   <ul class="timeline">
      <li>
         <div class="timeline-panel">
            <div class="timeline-heading">
               <h4 class="timeline-title"> {{a.name}} - <a href="{{a.link}}"> {{a.title}}</a></h4>
               <!-- <h6 class="timeline-title"> </h6 -->
               <!--     <p><small class="text-muted"><i class="glyphicon glyphicon-time"></i> 11 hours ago via Twitter</small></p>. way to get when it was posted -->
               
            </div>
            <div class="timeline-body">
              <p0><u>Comments</u></p0>
              <br></br>
               <p1><b>{{a.name}}:{{a.comment}}</b></p1>
               {{#each a.comments as |c|}}
               <br></br>
               <p2>{{c.name}}:{{c.comment}}</p2>
               {{/each}}
            </div>
            <form class="form-inline" method="POST" action="/feed">
               <div class="input-group mb-2 mr-sm-2 mb-sm-2">
                  <input type="text"  name="name" class="form-control mb-2 mr-sm-2 mb-sm-0" id="name" placeholder="Name">
               </div>
               <div class="input-group mb-2 mr-sm-2 mb-sm-2">
                  <input type="text" name ="comment" class="form-control" id="comment" placeholder="Comment">
               </div>
               <button type="submit" name="{{a._id}}" id="takebtn" class="btn btn-xs">Submit Your Take</button>
            </form>
         </div>
      </li>
   </ul>
   {{/each}}
</div>

